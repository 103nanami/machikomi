<container>
  <div class="row">
    <div class="admin_title_box">
      <h2 class="admin_title">コラムの編集</h2>
    </div>
  </div>

  <%= form_with model: @column, url:admin_column_path(@column.id), method: :PATCH, local:true do |f| %>
    <div class="row">
      <div class="col-lg-12 mx-auto">
        <table>
          <tr>
            <td class="table_title">タイトル</td>
            <td class="table_text"><%= f.text_field :title, style:"width:300px; height:25px;" %></td>
          </tr>

          <tr>
            <td class="table_title">街</td>
            <td class="table_text"></td>
          </tr>

          <tr>
            <td class="table_title",style="">記事</td>
            <td class="table_text"><%= f.text_area :text, style:"width:400px; height:200px;" %></td>
          </tr>

          <tr>
            <td class="table_title">画像</td>
            <td class="table_text">
              <%= attachment_image_tag @column, :image, style:"width:100px; height:auto;" %>
              <%= f.attachment_field :image %>
            </td>
          </tr>
        </table>
      </div>
    </div>

    <div class="row">
      <div class="button">
        <%=f.submit "変更を確定する", class:"btn btn-info" ,style:"width:150px" %>
      </div>
    </div>
  <% end %>
</container>

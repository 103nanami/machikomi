<container>
  <div class="row">
    <div class="admin_title_box">
      <h2 class="admin_title">コラムの投稿</h2>
    </div>
  </div>

  <%= form_with model: @column, url:admin_columns_path, method: :POST, local:true do |f| %>
    <div class="row">
      <div class="col-lg-12 mx-auto">
        <table>
          <tr>
            <td class="table_title">タイトル</td>
            <td class="table_text"><%= f.text_field :title, style:"width:300px; height:25px;" %></td>
          </tr>

          <tr>
            <td class="table_title">街</td>
            <td class="table_text"></td>
          </tr>

          <tr>
            <td class="table_title",style="">記事</td>
            <td class="table_text"><%= f.text_area :text, style:"width:400px; height:200px;" %></td>
          </tr>

          <tr>
            <td class="table_title">画像</td>
            <td class="table_text"><%= f.attachment_field :image %></td>
          </tr>
        </table>
      </div>
    </div>

    <div class="row">
      <div class="button">
        <%#= f.hidden_field :image %>
        <%#= f.hidden_field :image_cache %>
        <%=f.submit "投稿する", class:"btn btn-info" ,style:"width:120px" %>
      </div>
    </div>
  <% end %>
</container>

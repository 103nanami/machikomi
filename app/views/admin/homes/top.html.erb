<container>
  <div class="row">
    <div class="col-lg-3">
    </div>

    <div class="col-lg-6 mx-auto;">
      <div class="serch">

        <%= form_with model: @column, url:"", method: :get, local:true do |f| %>
        <div class="search_container">
          <%= f.text_field :keyword, placeholder: "キーワード検索", id: 'Search_Form', class: "Search_form" %>
          <%= image_submit_tag asset_path("search.png"), class: 'search-icon' %>
        </div>
        <% end %>

      </div>
    </div>

    <div class="col-lg-3">
    </div>
  </div>

  <div class="row">

    <div class="col-lg-2">
    </div>

    <div class="col-lg-8">
      <div class="top_column_all">
        <div class="card-columns">
        <% @columns.each do |column| %>
        <div class="card">
          <div class="card-img">
            <%= link_to admin_column_path(column.id) do %>
              <%= attachment_image_tag column, :image, style:"width:300px; height:200px;" %>
            <% end %>
           </div>
          <div class="card-body">
            <p><%= column.title %></p>
            <p><%= image_tag 'mappin.png',style:"width:20px;" %><%= column.city.name %></p>
          </div>
        </div>
        <% end %>
      </div>
      </div>

      <div style="margin-top:20px;"><%= paginate @pages %></div>
    </div>

    <div class="col-lg-2">
    </div>

  </div>
</container>
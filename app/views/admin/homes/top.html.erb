<container>
  <div class="row">
    <form class="d-flex">
      <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
  </div>

  <div class="row">
    <div class="col-lg-12 mx-auto">
      <div class="column-all">
      <%= @columns.each do |column| %>
        <div class="column">
        <%= link_to admin_column_path(column.id) do %>
          <%= attachment_image_tag column, :image, style:"width:300px; height:auto;" %>
        <% end %>
        <%= column.title %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</container>
<container>
  <div class="row">
    <div class="col-lg-3">
    </div>

    <div class="col-lg-6 mx-auto;">
      <div class="serch">

        <%= form_with model: @column, url:"", method: :get, local:true do |f| %>
        <div class="search_container">
          <%= f.text_field :keyword, placeholder: "キーワード検索", id: 'Search_Form', class: "Search_form" %>
          <%= image_submit_tag asset_path("search.png"), class: 'search-icon' %>
        </div>
        <% end %>

      </div>
    </div>

    <div class="col-lg-3">
    </div>
  </div>


  <div class="row">
    <div class="col-lg-2">
    </div>

    <div class="col-lg-8">
      <table style="margin-bottom:80x;">
        <thead>
          <tr style="border-bottom:solid 1px;">
            <th style="width:100px; text-align:center;">ID</th>
            <th style="text-align:center;">名前</th>
            <th style="text-align:center;">フリガナ</th>
            <th style="text-align:center;">登録日</th>
            <th style="text-align:center;">投稿</th>
            <th style="text-align:center;">ステータス</th>
          </tr>
        </thead>

        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td style="text-align:center; padding:20px;">
              <%= link_to admin_user_path(user) do %>
                <%= user.id %>
              <% end %>
            </td>
            <td style="text-align:center;">
              <%= user.last_name %> <%= user.first_name %></td>
            <td style="text-align:center;"><%= user.last_name_kana %> <%= user.first_name_kana %></td>
            <td style="text-align:center;"><%= user.created_at.strftime('%Y/%m/%d') %></td>
            <td style="text-align:center;"><%= link_to "投稿一覧", admin_users_posts_path, class:"btn btn-outline-secondary" %></td>
            <td style="text-align:center;">
  	          <% if user.is_active_was %>
  	            <p style="color:lightgreen; font-weight:bold;">有効</p>
  	          <% else %>
  	            <p style="color:red; font-weight:bold;">退会</p>
  	          <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>

      <div style="margin-top:20px;"><%= paginate @pages %></div>

    </div>

    <div class="col-lg-2">
    </div>

  </div>
</container>
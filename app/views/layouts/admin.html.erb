<!DOCTYPE html>
<html>
  <head>
    <title>まちコミ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' %>
    <script src="https://kit.fontawesome.com/e594750878.js" crossorigin="anonymous"></script>
  </head>

  <body id="adminbody">
    <header id="admin_header">
      <div class="nav">

        <div class="logo">
          <%= link_to admin_path, class:"link_to" do %>
            <p class="navlogo">まちコミ</p>
          <% end %>
        </div>

        <div class="post_icon">
          <%= link_to new_admin_column_path do %>
            <%= image_tag asset_path('post_new_icon.png'),style:"width:40px; height:auto;" %>
          <% end %>
        </div>


          <div class="hamburger">
            <span></span>
            <span></span>
            <span></span>
          </div>

          <nav class="globalMenuSp">
            <ul>
              <li class="nav-item">
                <%= link_to "コラム一覧", admin_path, class:"link_to" %>
              <li class="nav-item">
                <%= link_to "ユーザー一覧", admin_users_path, class:"link_to" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"link_to" %>
              </li>
              <li class="nav-item">
                <%= link_to "ユーザーTOP", root_path, class:"link_to" %>
              </li>
            </ul>
          </nav>


      </div>

    </header>

    <main>
      <%= yield %>
    </main>

    <footer>
      <div id="footer"></div>
    </footer>

  </body>
</html>


<script>
  $(function() {
    $('.hamburger').click(function() {
        $(this).toggleClass('active');

        if ($(this).hasClass('active')) {
            $('.globalMenuSp').addClass('active');
        } else {
            $('.globalMenuSp').removeClass('active');
        }

    });
});

$(function() {
    $('.globalMenuSp a[href]').click(function() {
        $('.globalMenuSp').removeClass('active');
       $('.hamburger').removeClass('active');

    });
  });
</script>
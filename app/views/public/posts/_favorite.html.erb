<% if post.favorited_by?(current_user) %>
  <p>
    <%= link_to post_post_favorites_path(post), method: :delete, remote: true, class:"btn btn-outline-danger",style:"width:150px;" do %>
      <%= image_tag asset_path('favorite.png'),style:"width:20px;" %><%= post.post_favorites.count %> いいね
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to post_post_favorites_path(post), method: :post, remote: true, class:"btn btn-outline-danger",style:"width:150px;" do %>
      <%= image_tag asset_path('not_favorite.png'),style:"width:20px;" %><%= post.post_favorites.count %> いいね
    <% end %>
  </p>
<% end %>
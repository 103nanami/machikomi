<container>
  <div class="row">
    <dv class="col-lg-12 mx-auto">
      <h1>投稿編集</h1>
      <%= form_with model:@post, local:true do |f| %>
        <label>タイトル</label>
        <%= f.text_field:post_name %>

        <label>内容</label>
        <%= f.text_area:post_text %>

        <label>画像</label>
        <%= f.attachment_field :image %>

        <%= f.submit '再投稿' %>
      <% end %>
    </dv>
  </div>
</container>
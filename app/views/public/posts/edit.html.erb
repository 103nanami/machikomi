<container>

  <%= form_with model: @post, url:post_path(@post), method: :GET, local:true do |f| %>
    <div class="row">
      <div class="col-lg-12 mx-auto">
        <table>
          <tr>
            <td class="table_text">
              <%= attachment_image_tag @post, :image %></br>
              画像を選択　<%= f.attachment_field :image %>
            </td>
          </tr>

          <tr>
            <td class="table_text"><%= f.text_field :post_name, style:"width:300px; height:25px;" %></td>
          </tr>

          <tr>
            <td class="table_text"><%= f.text_area :post_text, style:"width:400px; height:200px;" %></td>
          </tr>

          <tr>
            <td class="table_title">街</td>
            <td class="table_text"></td>
          </tr>

        </table>
      </div>
    </div>

    <div class="row">
      <div class="button">
        <%=f.submit "編集を確定", class:"btn btn-info" ,style:"width:120px" %>
      </div>
    </div>
  <% end %>
</container>
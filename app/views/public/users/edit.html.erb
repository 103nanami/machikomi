<conainer>
  <div class="row">
    <div class="col-lg-12 mx-auto">
      <h1>会員情報編集</h1>

      <%= form_with model:@user, url:user_path(@user), method: :PATCH, local:true do |f| %>

        <p>名前</p><%= current_user.last_name %><%= current_user.first_name %>
        <p>フリガナ</p><%= current_user.last_name_kana%><%= current_user.first_name_kana %>
        <p>メールアドレス</p><%= current_user.email %>
        <p>生年月日</p><%= current_user.birth_year %>年<%= current_user.birth_month %>月<%= current_user.birth_day %>
        <p>年齢</p><%= current_user.old %>歳
        <p>郵便番号</p><%= current_user.postal_code %>
        <p>住所</p><%= current_user.address %>

        <%= f.submit '変更を確定する', class:"btn btn-info", style:"width:150px;" %>
      <% end %>
    </div>
  </div>
</conainer>
<div class="container">
  <div class="row">
    <div class="col-lg-2">
    </div>

    <div class="col-lg-6">
      <h3 class="page_title">新規会員登録</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10">


      <%#= form_for(Customer.new, url: customer_registration_path) do |f| %>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

       <table>
        <tr>
          <th><label>名前</label></th>
          <td><%= f.text_field :last_name, autofocus: true,placeholder: "町野", style:" width:250px;" %></td>
          <td style="padding-left:30px;"><%= f.text_field :first_name, autofocus: true,placeholder: "町子", style:"width:250px;"  %></td>
        </tr>

        <tr>
          <th><label>フリガナ</label></th>
          <td><%= f.text_field :last_name_kana, autofocus: true,placeholder: "マチノ" ,style:"width:250px;" %></td>
          <td style="padding-left:30px;"><%= f.text_field :first_name_kana, autofocus: true,placeholder: "マチコ",style:"width:250px;" %></td>
        </tr>

        <tr>
          <th><label>生年月日</label></th>
          <td>
            <%= f.select :birth_year, *[1980..2010], autofocus: true %>年
            <%= f.select :birth_year, *[1..12], autofocus: true %>月
            <%= f.select :birth_day, *[1..31], autofocus: true %>日
          </td>
        </tr>

        <tr>
          <th><label>年齢</label></th>
          <td style="margin-left:20px;"><%= f.text_field :old, autofocus: true %>歳</td>
        </tr>

        <tr>
          <th><label>メールアドレス</label></th>
          <td style="margin-left:20px;"><%= f.email_field :email, autofocus: true, autocomplete: "email", style:"width:250px;" %></td>
        </tr>

        <tr>
          <th><label>郵便番号(ハイフンなし)</label></th>
          <td><%= f.text_field :postal_code, autofocus: true , style:"width:250px;"%></td>
        </tr>
      </table>

      <table>
        <tr>
          <th style="padding-left:0;"><label>住所</label></th>
          <td><%= f.text_field :address, autofocus: true, style:"width:500px;" %></td>
        </tr>

         <tr>
          <th style="padding-left:0;"><label>パスワード(6文字以上)</label></th>
          <td><%= f.password_field :password, autocomplete: "new-password", style:"width:250px;" %></td>
        </tr>

         <tr>
          <th style="padding-left:0;"><label>パスワード(確認用)</label></th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password", style:"width:250px;" %></td>
        </tr>

        <tr>
          <th></th>
          <td>
            <%= f.submit "新規登録",class:"btn btn-success" ,style:"margin:0 0 0 55px; width:250px;" %>
          </td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>
